<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gerenteapp.ChatClientController">
    <children>
        <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Mezularitza" />
      <Label fx:id="lblUser" visible="true" />
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <content>
                <VBox fx:id="messageArea" spacing="10" style="-fx-padding: 10;" />
            </content>
        </ScrollPane>
        <HBox spacing="5">
            <TextField fx:id="messageField" promptText="Idatzi mezua..." style="-fx-pref-width: 400;" />
            <Button fx:id="sendButton" style="-fx-background-color: #ff6600; -fx-text-fill: white;" text="Bidali" />
        </HBox>
    </children>
</VBox>
